.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 200rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.login-txt{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.login-txt text{
    font-size: 20px;
    font-weight: bold;
}
.login-form{
    width: 80%;
    margin-top: 30rpx;
}
.login-form input{
    background: #fff;
    height: 2rem;
    border-radius: 4px;
    border:1px solid #eee;
    font-size: 0.8rem;
    padding-left: 5%;
}
.login-btn{
    width: 80%;
    margin-top: 50rpx;
}
.login-re{
    width: 80%;
    margin-top: 30rpx;
}
.login-re text{
    font-size: 0.8rem;
}
.login-re switch{
    float: right;
}