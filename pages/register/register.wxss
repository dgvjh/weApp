input{
    background: #fff;
    width: 95%;
    height: 2.3rem;
    border-radius: 4px;
    font-size: 0.8rem;
    border: 1px solid #eee;
    padding-left: 5%;
}
.section{
    width: 90%;
    margin-top: 1rem;
}
button{
    margin-top:1.5rem;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.up-img{
    width: 100%;
    height: 150px;
    display: flex;
    flex-direction: column;
	align-items:center;
    padding:30px 0;
    background: #fff;
}
.up-img image{
    width: 100px;
    height: 100px;
    border:1px solid #ccc;
}
.up-head{
    font-size: 16px;
    margin-bottom: 10px;
}